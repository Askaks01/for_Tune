<%= render "header" %>

<%# 画面上部のスライダー部分 %>
<div class='slider-contents'>
  <h2 class='new-routine'>
    NEW routine!!
  </h2>
  <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        生活に関するroutine
      </div>
      <div class="carousel-item">
        鍛えるためのroutine
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<!-- カード -->
<div class="container my-5" id="skill">
  <h2 class= "py-4 text-dark">みんなのroutine</h2>
  <div class="row row-cols-1 row-cols-md-3">
    <ul class='routine-lists col mb-4'>
      <% if @routines.present? %>
        <% @routines.each do |routine| %>
          <li class='card'>
            <%= link_to image_tag(routine.image, class: "card-img-top px-3 mb-3"), "#" %>
            <div class="card-body">
              <h5 class="card-title"><%= routine.name %></h5>
              <p class="card-text"><%= routine.description %></p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>          
  </div>
</div>

<%= render "footer" %>
