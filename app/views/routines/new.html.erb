<%= render "header" %>

<form>
  <div class="form-group">
    <label for="exampleFormControlFile1">Photos in routine</label>
    <input type="file" class="form-control-file" id="exampleFormControlFile1">
    <label for="exampleFormControlInput1">What is routine?</label>
    <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Routine work">
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect1">Category select</label>
    <select class="form-control" id="exampleFormControlSelect1">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlSelect2">Timeframe select</label>
    <select multiple class="form-control" id="exampleFormControlSelect2">
      <option>1</option>
      <option>2</option>
      <option>3</option>
      <option>4</option>
      <option>5</option>
      <option>6</option>
      <option>7</option>
      <option>8</option>
      <option>9</option>
      <option>10</option>
    </select>
  </div>
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Textarea</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="5"></textarea>
  </div>
  <input type="submit" value="SEND" class="send">
</form>